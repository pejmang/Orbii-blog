{% extends "sitebase.njk" %}

{% block title %}Orbii, Digital Transformation, Innovation & AI{% endblock %}

{% block site_content %}
  <p><h2>Les chroniques de l'Innovation</h2></p>
  
  <div class="mono">
    {% for post in collections.fr_posts %}
      <div class="post-list">

        <!-- Affichage dynamique de l'icône basé sur le type du post -->
        {% if post.data.type %}
          <img src="/images/ic/i-{{ post.data.type }}.png" alt="{{ post.data.type }}" title="{{ post.data.type }}" style="width: 30px; height: auto;">
        {% endif %}
      
        <!-- Titre de l'article -->
        <a href="{{ post.url }}">{{ post.data.title }}</a>

        <!-- Affichage du teaser -->
        <div class="teaser">{{ post.data.teaser }}</div>
       
      </div>
    {% endfor %}
  </div>

  {% extends "layout.njk" %}

{% block content %}
<div id="form-container">
    <h2>Configurer votre entreprise</h2>
    <div class="form-group">
        <label for="company-name">Nom de l'entreprise:</label>
        <input type="text" id="company-name" placeholder="Entrez le nom de votre entreprise">
    </div>
    <div class="form-group">
        <label for="industry">Secteur d'activité:</label>
        <select id="industry">
            <option value="tech">Technologie</option>
            <option value="finance">Finance</option>
            <option value="health">Santé</option>
            <option value="manufacturing">Industrie</option>
        </select>
    </div>
    <div class="form-group">
        <label for="size">Taille de l'entreprise:</label>
        <select id="size">
            <option value="small">Petite (1-50 employés)</option>
            <option value="medium">Moyenne (51-500 employés)</option>
            <option value="large">Grande (500+ employés)</option>
        </select>
    </div>
    <div class="form-group">
        <label for="focus">Priorité actuelle:</label>
        <select id="focus">
            <option value="innovation">Innovation</option>
            <option value="growth">Croissance</option>
            <option value="efficiency">Efficacité</option>
            <option value="customer">Satisfaction client</option>
        </select>
    </div>
    <button id="submit-btn">Générer le graphique</button>
</div>

<div id="graph-container">
    <svg width="600" height="600"></svg>
</div>

<script src="https://d3js.org/d3.v6.min.js"></script>
<script src="/js/app.js"></script>
{% endblock %}

{% endblock %}
