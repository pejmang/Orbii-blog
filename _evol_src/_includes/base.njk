  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {% if lang == "en" %}
    <title>Orbii, Your Ecosystem for Digital Transformation and AI</title>
    <meta name="description" content="Orbii brings you insights from the forefront of digital transformation and AI. Our Knowledge Architects deliver thought leadership on the 9 pillars of successful organizational transformation.">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content="Orbii: Insights & Knowledge of Digital and AI Transformation">
    <meta property="og:description" content="Explore Orbii for expert insights on digital transformation, AI, and organizational success. Learn from leaders shaping the future of technology and business.">
    <meta property="og:url" content="https://www.orbii.fr/en">
    <meta property="og:type" content="website">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Orbii: Insights & Knowledge of Digital and AI Transformation">
    <meta name="twitter:description" content="Discover Orbii's expert insights on digital transformation, AI, and the strategies that are reshaping industries.">
    
    <!-- Hreflang -->
    <link rel="alternate" href="https://www.orbii.fr/en" hreflang="en-US">
    <link rel="alternate" href="https://www.orbii.fr/fr" hreflang="fr-FR">
    
  {% else %}
    <title>ORBii, Votre Ecosystem pour la Transformation Digitale et de l'IA</title>
    <meta name="description" content="Orbii propose des idées novatrices sur la transformation digitale et l'intelligence artificielle. Nos Architectes du Savoir offrent un leadership éclairé sur les 9 piliers du succès organisationnel.">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content="ORBii, Your Ecosystem for Digital Transformation and AI">
    <meta property="og:description" content="Discover ORBii's innovative ideas on digital transformation, AI, and strategies that are redefining industries.">
    <meta property="og:url" content="https://www.orbii.fr/fr">
    <meta property="og:type" content="website">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="ORBii, Your Ecosystem for Digital Transformation and AI">
    <meta name="twitter:description" content="Discover ORBii's innovative ideas on digital transformation, AI, and strategies that are redefining industries.">
    
    <!-- Hreflang -->
    <link rel="alternate" href="https://www.orbii.fr/fr" hreflang="fr-FR">
    <link rel="alternate" href="https://www.orbii.fr/en" hreflang="en-US">
  {% endif %}
  
  <!-- Meta Additionnelles -->
  <meta name="robots" content="index, follow">
  <meta name="author" content="ORBii Team">
  <meta name="keywords" content="Digital Transformation, AI, Intelligence Artificielle, Transformation Digitale, Tech, Data, Cybersécurité">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="https://www.orbii.fr{{ page.url | url }}">
  
  <!-- Favicon and Icons -->
  <link rel="icon" href="/images/favicon/favicon.ico" type="image/x-icon">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
  <link rel="manifest" href="/images/favicon/site.webmanifest">
  
  <!-- Optimisation des Feuilles de Style -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
  <link rel="stylesheet" href="/styles/styles.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ORBii",
    "url": "https://www.orbii.fr",
    "logo": "https://www.orbii.fr/images/logo.png",
    "sameAs": [
      "https://linkedin.com/company/orbii-tech"
    ],
    "description": "ORBii is a knowledge hub dedicated to Digital Transformation and AI, providing expert insights and fostering a community of Insight Builders."
  }
  </script>
  
  {% block head %}{% endblock %}
</head>

<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T2W7NLK4" height="0" width="0" style="display:none;visibility:hidden"></iframe>
  </noscript>
  <!-- End Google Tag Manager (noscript) -->
  
  {% block content %}{% endblock %}
  
  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-links">
        <ul>
          <li><a href="/privacy/">Privacy</a></li>
          <li><a href="/publish">Publish</a></li>
          <li><a href="/OrbiiKnowledge/">Orbii Knowledge</a></li>
        </ul>
      </div>
      <div class="footer-info">
        © <span id="year">{{ "now" | date("Y") }}</span> ORBii : Digital Transformation & AI
      </div>
    </div>
  </footer>
  
  <script>
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
</body>
</html>
