  <!-- Form Section -->
  <h2>Apply to Become an Insight Builder</h2>
  
  <p>
    Become a key player in knowledge development and join passionate experts to build bridges between the Tech, Digital, Data, AI, Cybersecurity communities, and much more.
  </p>
  
  <form id="insight-builder-form" action="/send_email.php" method="POST">
    <label for="name">Full Name:</label><br>
    <input type="text" id="name" name="name" required><br><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" required><br><br>

    <label for="expertise">Area of Expertise:</label><br>
    <input type="text" id="expertise" name="expertise" required><br><br>

    <label for="message">Why do you want to become an Insight Builder?</label><br>
    <textarea id="message" name="message" rows="5" required></textarea><br><br>

    <input type="submit" value="Submit">
  </form>

  <!-- Success Message -->
  <div class="success-message" id="success-message" style="display:none;">
    Thank you for your application! We will review your request and get back to you soon.
  </div>

  <!-- Error Message -->
  <div class="error-message" id="error-message" style="display:none;">
    Oops! Something went wrong. Please try again later.
  </div>

  <script>
    document.getElementById("insight-builder-form").addEventListener("submit", function(e) {
      e.preventDefault(); // Prevent the form from submitting the default way

      var formData = new FormData(this); // Gather form data

      fetch('/send_email.php', {
        method: 'POST',
        body: formData
      })
      .then(response => response.text())
      .then(data => {
        // Show success message on the same page
        document.getElementById("success-message").style.display = "block";

        // Hide error message if it was displayed previously
        document.getElementById("error-message").style.display = "none";

        // Optionally, reset the form fields
        document.getElementById("insight-builder-form").reset();
      })
      .catch(error => {
        // Show error message
        document.getElementById("error-message").style.display = "block";
        document.getElementById("success-message").style.display = "none";
        console.error("Error:", error);
      });
    });
  </script>

