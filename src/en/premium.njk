<!-- Contact Form -->
<h2 id="register-form" style="text-align: center; margin-top: 40px;">Register Your Interest</h2>
<div class="form-container" style="max-width: 700px; margin: 50px auto; padding: 30px; background: #f8f9fc; border-radius: 15px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);">
  <h1 style="text-align: center; font-size: 24px; color: #003366; font-weight: bold;">Register Your Interest</h1>
  <p style="text-align: center; color: #555;">Please fill out the form below, and we'll get in touch shortly.</p>
  <form id="contact-form" action="/send_subscribe.php" method="POST" style="margin-top: 20px;">
    <div style="display: flex; flex-direction: column; gap: 15px;">
      <div>
        <label for="firstName" style="font-weight: bold; color: #003366;">First Name</label>
        <input type="text" id="firstName" name="firstName" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="lastName" style="font-weight: bold; color: #003366;">Last Name</label>
        <input type="text" id="lastName" name="lastName" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="email" style="font-weight: bold; color: #003366;">Business Email Address</label>
        <input type="email" id="email" name="email" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="company" style="font-weight: bold; color: #003366;">Company</label>
        <input type="text" id="company" name="company" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="offer" style="font-weight: bold; color: #003366;">Offer of Interest</label>
        <select id="offer" name="offer" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; appearance: none; background: #fff;">
          <option value="" style="color: #aaa;">Select an Offer</option>
          <option value="Insight Express">Insight Express</option>
          <option value="Insight Pro">Insight Pro</option>
          <option value="Continuity Pack">Continuity Pack</option>
          <option value="Custom Insights">Custom Insights</option>
        </select>
      </div>
      <div>
        <label for="comments" style="font-weight: bold; color: #003366;">Additional Comments</label>
        <textarea id="comments" name="comments" rows="5" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;"></textarea>
      </div>
      <div style="text-align: center;">
        <input type="submit" value="Submit" style="background: #007bff; color: white; padding: 15px 30px; border: none; border-radius: 8px; font-size: 18px; font-weight: bold; cursor: pointer; transition: background 0.3s;">
      </div>
    </div>
  </form>
</div>

<script>
  document.getElementById("contact-form").addEventListener("submit", function (e) {
    e.preventDefault(); // Prevent default form submission
    var formData = new FormData(this);

    fetch("/send_subscribe.php", {
      method: "POST",
      body: formData,
    })
      .then((response) => response.text())
      .then((data) => {
        alert("Thank you for your submission! We will contact you shortly.");
        this.reset();
      })
      .catch((error) => {
        alert("Oops! Something went wrong. Please try again.");
        console.error("Error:", error);
      });
  });
</script>
{% endblock %}
