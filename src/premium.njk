<!-- Formulaire d'inscription -->
<h2 id="register-form" style="text-align: center; margin-top: 40px;">Inscrivez-vous</h2>
<div class="form-container" style="max-width: 700px; margin: 50px auto; padding: 30px; background: #f8f9fc; border-radius: 15px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);">
  <h1 style="text-align: center; font-size: 24px; color: #003366; font-weight: bold;">Inscription</h1>
  <p style="text-align: center; color: #555;">Remplissez le formulaire ci-dessous, et nous vous contacterons rapidement.</p>
  <form id="contact-form" action="/send_email.php" method="POST" style="margin-top: 20px;">
    <div style="display: flex; flex-direction: column; gap: 15px;">
      <div>
        <label for="firstName" style="font-weight: bold; color: #003366;">Prénom</label>
        <input type="text" id="firstName" name="firstName" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="lastName" style="font-weight: bold; color: #003366;">Nom</label>
        <input type="text" id="lastName" name="lastName" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="email" style="font-weight: bold; color: #003366;">Adresse email professionnelle</label>
        <input type="email" id="email" name="email" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="company" style="font-weight: bold; color: #003366;">Entreprise</label>
        <input type="text" id="company" name="company" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
      </div>
      <div>
        <label for="offer" style="font-weight: bold; color: #003366;">Offre d'intérêt</label>
        <select id="offer" name="offer" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; appearance: none; background: #fff;">
          <option value="" style="color: #aaa;">Sélectionner une offre</option>
          <option value="Insight Express">Insight Express</option>
          <option value="Insight Pro">Insight Pro</option>
          <option value="Continuity Pack">Continuity Pack</option>
          <option value="Custom Insights">Custom Insights</option>
        </select>
      </div>
      <div>
        <label for="comments" style="font-weight: bold; color: #003366;">Commentaires supplémentaires</label>
        <textarea id="comments" name="comments" rows="5" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;"></textarea>
      </div>
      <div style="text-align: center;">
        <input type="submit" value="Soumettre" style="background: #007bff; color: white; padding: 15px 30px; border: none; border-radius: 8px; font-size: 18px; font-weight: bold; cursor: pointer; transition: background 0.3s;">
      </div>
    </div>
  </form>
</div>

<script>
  document.getElementById("contact-form").addEventListener("submit", function (e) {
    e.preventDefault();
    var formData = new FormData(this);

    fetch("/send_subscribe.php", {
      method: "POST",
      body: formData,
    })
      .then((response) => response.text())
      .then((data) => {
        alert("Merci pour votre inscription ! Nous vous contacterons rapidement.");
        this.reset();
      })
      .catch((error) => {
        alert("Une erreur est survenue. Veuillez réessayer.");
        console.error("Erreur :", error);
      });
  });
</script>
{% endblock %}
