  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ title | safe }}</title>

  <!-- Utiliser 'teaser' comme fallback pour 'description' -->
  <meta name="description" content="{{ description or teaser | safe }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:title" content="{{ title | safe }}">
  <meta property="og:description" content="{{ description or teaser | safe }}">
  <meta property="og:image" content="https://orbii.fr/images/posts/fr/{{ page.fileSlug }}.png">
  <meta property="og:url" content="{{ page.url | url }}">
  <meta property="og:type" content="article">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title | safe }}">
  <meta name="twitter:description" content="{{ description or teaser | safe }}">
  <meta name="twitter:image" content="{{ image | url }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ page.url | url }}">

  <!-- Favicon and Icons -->
  <link rel="icon" href="/images/favicon/favicon.ico" type="image/x-icon">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
  <link rel="manifest" href="/images/favicon/site.webmanifest">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/styles/styles.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  {% block head %}{% endblock %}
</head>

