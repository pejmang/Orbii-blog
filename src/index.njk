{% extends "sitebase.njk" %}

{% block title %}Orbii, Digital Transformation, Innovation & AI{% endblock %}

{% block site_content %}
  <p><h2>Les chroniques de l'Innovation</h2></p>
  
  <div class="mono">
    {% for post in collections.fr_posts %}
      <div class="post-list">

        <!-- Affichage dynamique de l'icône basé sur le type du post -->
        {% if post.data.type %}
          <img src="/images/ic/i-{{ post.data.type }}.png" alt="{{ post.data.type }}" title="{{ post.data.type }}" style="width: 30px; height: auto;">
        {% endif %}
      
        <!-- Titre de l'article -->
        <a href="{{ post.url }}">{{ post.data.title }}</a>

        <!-- Affichage du teaser -->
        <div class="teaser">{{ post.data.teaser }}</div>
       
      </div>
    {% endfor %}
  </div>
{% endblock %}
