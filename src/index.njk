{% extends "base.njk" %}

{% block title %}Home Page{% endblock %}

{% block content %}
  <div class="container">
    <h1>Pejman Gohari</h1>
    <p class="mono">Réflexions & Pensées &mdash;</p>

    <div class="mono">
    {% for post in collections.posts %}
      <div class="post-list">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <div class="teaser">{{ post.data.teaser }}</div>
      </div>
    {% endfor %}
    </div>
  </div>
{% endblock %}

