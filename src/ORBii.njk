<script>
  // Fonctionnalité des onglets
  document.querySelectorAll('.tabs-menu li').forEach(tab => {
    tab.addEventListener('click', () => {
      // Retirer la classe active de tous les onglets et contenus
      document.querySelectorAll('.tabs-menu li').forEach(item => item.classList.remove('active-tab'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active-content'));

      // Ajouter la classe active à l’onglet cliqué et au contenu correspondant
      tab.classList.add('active-tab');
      const tabId = tab.getAttribute('data-tab');
      document.getElementById(tabId).classList.add('active-content');
    });
  });
</script>

